@model List<TechLinkIntranet.Models.Test.TableItems>
<table class="table table-bordered table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                Name
            </th>
            <th>
                PhoneNumber
            </th>
            <th>
                Address
            </th>
            <th>
                Position
            </th>
        </tr>
       
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            if (i % 2 == 0)
            {
                <tr class="">
                    <td>@Model[i].Name</td>
                    <td>@Model[i].PhoneNumber</td>
                    <td>@Model[i].Address</td>
                    <td>@Model[i].Position</td>
                </tr>
            }
            else
            {
                <tr class="">
                    <td>@Model[i].Name</td>
                    <td>@Model[i].PhoneNumber</td>
                    <td>@Model[i].Address</td>
                    <td>@Model[i].Position</td>
                </tr>
            }
        }
    </tbody>
</table>
